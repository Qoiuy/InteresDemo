<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>Lilac.web.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>CodeServlet</servlet-name>
    <servlet-class>Lilac.web.CodeServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AjaxRegisterServlet</servlet-name>
    <servlet-class>Lilac.web.AjaxCheckRegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ajaxCheckUserServlet</servlet-name>
    <servlet-class>Lilac.web.AjaxCheckUserServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>Lilac.web.LoginServlet</servlet-class>
  </servlet>

	<filter>
	<filter-name>AutoCharSet</filter-name>
	<filter-class>Lilac.utils.AutoCharSet</filter-class>
	</filter>
	<filter>
	<filter-name>AutoLogin</filter-name>
	<filter-class>Lilac.utils.AutoLogin</filter-class>
	</filter>
	<filter-mapping>
	<filter-name>AutoLogin</filter-name>
	<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
	<filter-name>AutoCharSet</filter-name>
	<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CodeServlet</servlet-name>
    <url-pattern>/code</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AjaxRegisterServlet</servlet-name>
    <url-pattern>/ajaxRegister</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ajaxCheckUserServlet</servlet-name>
    <url-pattern>/ajaxUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

</web-app>